<Page x:Class="DSIXamlProyect.ModoLocal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:DSIXamlProyect"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Viewbox HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Stretch="Fill">
        <Canvas Height="1000"
                Width="1500">

            <Image Source="/Assets/Fondo.png"
                   Stretch="Fill"
                   Height="1000"
                   Width="1500" />

            <TextBlock Text="Selecciona oponente "
                       FontSize="70"
                       Margin="228,136,0,0"
                       FontFamily="Kristen ITC"
                       Height="114"
                       Canvas.Left="223"
                       Canvas.Top="-52"
                       Width="717" />

            <StackPanel x:ConnectionId='2' x:Name="Jugadores"
                        Canvas.Left="850"
                        Canvas.Top="300">

                <Button x:ConnectionId='3' Content="Amigo 1"
                        x:Name="AMIGO1"
                        Background="Green"
                        FontFamily="Kristen ITC"
                        Width="250"
                        Height="100"
                        FontSize="40"
                        Foreground="Black" />
                <Button x:ConnectionId='4' Content="Amigo 2"
                        x:Name="AMIGO2"
                        Background="Green"
                        FontFamily="Kristen ITC"
                        Width="250"
                        Height="100"
                        FontSize="40"
                        Foreground="Black" />
                <Button x:ConnectionId='5' Content="Amigo 3"
                        x:Name="AMIGO3"
                        Background="Red"
                        FontFamily="Kristen ITC"
                        Width="250"
                        Height="100"
                        FontSize="40"
                        Foreground="Black" />
                <Button x:ConnectionId='6' Content="Amigo 4"
                        x:Name="AMIGO4"
                        Background="Red"
                        FontFamily="Kristen ITC"
                        Width="250"
                        Height="100"
                        FontSize="40"
                        Foreground="Black" />
                <Button x:ConnectionId='7' Content="Amigo 5"
                        x:Name="AMIGO5"
                        Background="Red"
                        FontFamily="Kristen ITC"
                        Width="250"
                        Height="100"
                        FontSize="40"
                        Foreground="Black" />
            </StackPanel>
            
            <Button   AutomationProperties.Name="Volver"
                      Height="138"
                      Background="Transparent"
                      Width="240"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="20,70,0,0">
                <Image Source="/Assets/Volver.png"
                       AutomationProperties.Name="Slice" />
            </Button>
            <Button   AutomationProperties.Name="Listo"
                      Height="138"
                      Background="Transparent"
                      Width="240"
                      Margin="20,20,0,0"
                      RenderTransformOrigin="0.51,0.504">
                <Image Source="/Assets/listo.png"
                       AutomationProperties.Name="Slice"
                       Margin="1205,394,-1251,-440" />
            </Button>

            <TextBox Text="Jugador"
                     Background="Orange"
                     FontSize="75"
                     FontFamily="kristen ITC"
                     FontStretch="Normal"
                     TextAlignment="Center"
                     Margin="140,337,781,281"
                     Canvas.Left="-21"
                     Canvas.Top="112" />
            <TextBlock Text="VS"
                       FontSize="75"
                       FontFamily="kristen ITC"
                       Height="105"
                       Width="105"
                       Margin="539,337,0,0"
                       Canvas.Left="10"
                       Canvas.Top="119" />
        </Canvas>
    </Viewbox>
</Page>

