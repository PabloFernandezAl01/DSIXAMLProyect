<Page x:Class="DSIXamlProyect.Ajustes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:DSIXamlProyect"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill">
        <Canvas x:ConnectionId='2' Height="1000" Width="1500"                         >

            <Image Source="/Assets/Fondo.png" Stretch="Fill" Height="1000" Width="1500" />

            <StackPanel Canvas.Left="414" Canvas.Top="51"  Height="105" Width="auto" Background="Orange">
                <TextBlock x:ConnectionId='16' TextAlignment="Center" x:Name="ajustesJuego" Text="Ajustes del Juego" FontSize="70" Foreground="Black" FontWeight="Bold" Height="87" Width="625"/>
            </StackPanel>

            <Rectangle Height="577" Canvas.Left="437" Stroke="Black" StrokeThickness="4" Canvas.Top="161"  Width="1"/>
            <Rectangle Height="1" Canvas.Left="443"  Stroke="Black" StrokeThickness="4" Canvas.Top="273"   Width="150"/>
            <Rectangle Height="1" Canvas.Left="443"  Stroke="Black" StrokeThickness="4"  Canvas.Top="575" Width="150" />
            <Rectangle Height="1" Canvas.Left="443" Stroke="Black" StrokeThickness="4" Canvas.Top="737"  Width="150" />
            <Rectangle Height="1" Canvas.Left="443"  Stroke="Black" StrokeThickness="4" Canvas.Top="434" Width="153" RenderTransformOrigin="0.5,0.5" >

                <Rectangle.RenderTransform>
                    <CompositeTransform ScaleY="-1"/>
                </Rectangle.RenderTransform>
            </Rectangle>



            <Button x:ConnectionId='3' x:Name="MusicaButton" Width="70" Height="70" Canvas.Left="1000" Canvas.Top="240" Background="Red" TabIndex="1"
                    BorderBrush="Black" BorderThickness="3"                          />

            <Button x:ConnectionId='4' x:Name="EfectosButton" Width="70" Height="70" Canvas.Left="1000" Canvas.Top="400" Background="Red" TabIndex="2"
                    BorderBrush="Black" BorderThickness="3"                           />

            <Button x:ConnectionId='5' x:Name="TutorialesButton" Width="70" Height="70" Canvas.Left="1000" Canvas.Top="540" Background="Red" TabIndex="3"
                    BorderBrush="Black" BorderThickness="3"                              />

            <RadioButton x:ConnectionId='6' x:Name="radioButton" Canvas.Left="883" Canvas.Top="716"  Height="48"  Foreground="Black"                         
                        TabIndex="4">
                <Image Source="/Assets/España.jpg" />
            </RadioButton>

            <RadioButton x:ConnectionId='7' x:Name="radioButton1"  Canvas.Left="1008" Canvas.Top="716"  Height="48" TabIndex="5"                      
                         Width="100" Background="#03F0A7A7" BorderBrush="Black" Foreground="Black">
                <Image Source="/Assets/french_flag.jpg" Width="87" Stretch="Fill"/>
            </RadioButton>

            <RadioButton x:ConnectionId='8' x:Name="radioButton2" Canvas.Left="1150" Canvas.Top="716"   Height="48" Width="97" Foreground="Black"                     
                           TabIndex="6">
                <Image Source="/Assets/Ingles.png" />
            </RadioButton>

            <RadioButton x:ConnectionId='9'  Canvas.Left="1300" Canvas.Top="716"   Height="48" Width="97" Foreground="Black"                     
                           TabIndex="6">
                <Image Source="/Assets/bandera_alemania.jpg"  Stretch="Fill" Width="75" Height="44" />
            </RadioButton>

            <Button x:ConnectionId='10' x:Name="button1"                Canvas.Left="50"  Canvas.Top="40" IsTabStop="True" TabIndex="0" Background="Transparent"
                    Height="127" Width="205">
                <Image Source="Assets/Volver.png" Stretch="Fill"/>
            </Button>

            <Button x:ConnectionId='11' x:Name="button1copy"                      Canvas.Left="1116" Canvas.Top="51"  IsTabStop="True" TabIndex="7"
                    Background="Transparent"  Height="123" Width="256">
                <Image Source="Assets/Volveralmenu.png" Stretch="Fill"  Margin="-10,-6,-10,-7" />
            </Button>

            <StackPanel Canvas.Left="598" Canvas.Top="249"  Width="auto"  Height="50"  Background="Orange">
                <TextBlock x:ConnectionId='15' TextAlignment="Left" x:Name="musica" Text="MUSICA" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Left" 
                           Foreground="Black" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Canvas.Left="596"  Canvas.Top="410"  Width="auto" Height="50" Background="Orange">
                <TextBlock x:ConnectionId='14' x:Name="efectos" Text="EFECTOS" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Left"  Foreground="Black"
                        FontWeight="Bold"/>

            </StackPanel>

            <StackPanel Canvas.Left="598" Canvas.Top="551"  Width="auto" Height="50" Background="Orange">
                <TextBlock x:ConnectionId='13' x:Name="tutoriales" Text="TUTORIALES"  FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Left" 
                            Foreground="Black"  FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Canvas.Left="598"  Canvas.Top="713"  Width="Auto"  Height="auto" IsTapEnabled="False" Background="Orange">
                <TextBlock x:ConnectionId='12' x:Name="emparejado" Text="EMPAREJADO" FontSize="30" VerticalAlignment="Center " HorizontalAlignment="Left"
                             Foreground="Black"  FontWeight="Bold"/>
            </StackPanel>
        </Canvas>
    </Viewbox>
</Page>

