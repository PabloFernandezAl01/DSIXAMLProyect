<Page
    x:Class="DSIXamlProyect.SeleccionEscenario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIXamlProyect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill">
            <Canvas Width="1500" Height="1000">
                <Image x:ConnectionId='2' Source="Assets/Fondo.png" x:Name="Fondo" Stretch="Fill" Height="1000" Width="1500"/>

                <Button x:ConnectionId='3' Width="180" Height="106" Canvas.Left="111" x:Name="Volver"  Canvas.Top="38" FocusVisualSecondaryBrush="{x:Null}" FocusVisualPrimaryBrush="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" 
                        Foreground="{x:Null}"               >
                    <Image Source="Assets/Volver.png" Height="106" Width="180" Margin="-10,-6,-10,-7"/>
                </Button>

                <TextBlock  Text="Selecciona escenario" FontSize="70"  FontStretch="Condensed" 
                    FontFamily="Kristen ITC"  Foreground="Black" Margin="0,43,0,0" Height="109" Width="730" Canvas.Left="392"/>

                <Image Source="Assets/white.png" Canvas.Left="375" Canvas.Top="363" Height="274" Stretch="Fill" Width="225"/>
                <Image Source="Assets/Escenarios/3.jpg" Canvas.Left="381" Canvas.Top="367" Height="266" Stretch="Fill" Width="219"/>

                <Image Source="Assets/white.png" Canvas.Left="487" Canvas.Top="339" Height="321" Stretch="Fill" Width="263"/>
                <Image Source="Assets/Escenarios/2.jpg" Canvas.Left="491" Canvas.Top="343" Height="314" Stretch="Fill" Width="259"/>

                <Image Source="Assets/white.png" Canvas.Left="1010" Canvas.Top="363" Height="274" Stretch="Fill" Width="113"/>
                <Image Source="Assets/Escenarios/5.jpg" Canvas.Left="900" Canvas.Top="367" Height="266" Stretch="Fill" Width="219"/>

                <Image Source="Assets/white.png" Canvas.Left="885" Canvas.Top="339" Height="322" Stretch="Fill" Width="134"/>
                <Image Source="Assets/Escenarios/4.jpg" Canvas.Left="755" Canvas.Top="343" Height="314" Stretch="Fill" Width="259"/>

                <Image Source="Assets/white.png" Canvas.Left="600" Canvas.Top="320" Height="360" Stretch="Fill" Width="300"/>
                <Image Source="Assets/Escenarios/1.jpg" Canvas.Left="605" Canvas.Top="324" Height="352" Stretch="Fill" Width="290"/>


                <Button Canvas.Left="111" Canvas.Top="431" Height="125" Width="126" Background="{x:Null}" FocusVisualSecondaryBrush="{x:Null}" FocusVisualPrimaryBrush="{x:Null}" BorderBrush="{x:Null}">
                    <Image Source="Assets/BlackArrow.png"  Height="125" Width="126" Stretch="Fill" Margin="-10,-6,-10,-7"/>
                </Button>

                <Button Canvas.Left="1251" Canvas.Top="431" Height="125" Width="126" Background="{x:Null}" BorderBrush="{x:Null}" FocusVisualPrimaryBrush="{x:Null}" FocusVisualSecondaryBrush="{x:Null}">
                    <Image Source="Assets/BlackArrow.png"  Height="125" Width="126" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="-10,-6,-10,-7">
                        <Image.RenderTransform>
                            <CompositeTransform ScaleX="-1"/>
                        </Image.RenderTransform>
                    </Image>
                </Button>

                <Image Source="Assets/outstand.png" Canvas.Left="586" Canvas.Top="303" Height="394" Width="329" Stretch="Fill"/>

                <TextBlock  Text="Estadio espinaca" FontSize="55"  FontStretch="Condensed" 
                    FontFamily="Kristen ITC"  Foreground="Black" Margin="0,43,0,0" Height="81" Width="452" Canvas.Left="525" Canvas.Top="685"/>

                <Button x:ConnectionId='4' Canvas.Left="1190" Canvas.Top="765" Height="152" Width="248" Background="{x:Null}" FocusVisualSecondaryBrush="{x:Null}" 
                        FocusVisualPrimaryBrush="{x:Null}" BorderBrush="{x:Null}"                   >
                    <Image Source="Assets/listocirculo.png"  Height="152" Width="248" Stretch="Fill" Margin="-10,-6,-10,-7" />
                </Button>

            </Canvas>
        </Viewbox>
    </Grid>
</Page>

