<Page x:Class="DSIXamlProyect.ModoDeJuego"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIXamlProyect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
<Grid>
    <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill">
        <Canvas Width="1500" Height="1000">
            <Image x:ConnectionId='2'  x:Name="Fondo" Source="Assets/Fondo.png" Stretch="Fill" Height="1000" Width="1500" />
            <Button x:ConnectionId='3' x:Name="volver"                      Background="Transparent" FontStretch="Normal" Height="150" Width="250">
                <Image Source="/Assets/Volver.png" AutomationProperties.Name="Slice" Stretch="Fill" />
            </Button>
            <Button x:ConnectionId='4' x:Name="Listo" FontStretch="Normal" Background="Transparent"                       Height="200" Width="250" Canvas.Top="400" Opacity="0.5" Canvas.Left="1200">
                <Image Source="/Assets/Listo.png" AutomationProperties.Name="Slice" Stretch="Fill"/>
            </Button>
            <TextBlock Canvas.Left="220" Canvas.Top="180" Text="Seleccion de modo de juego" FontSize="70" FontStretch="Condensed" 
                    FontFamily="Kristen ITC" Foreground="Black" Height="100" Width="1000"/>
                <StackPanel x:ConnectionId='5' x:Name="JugadroVsIA" Canvas.Left="400" Canvas.Top="400" BorderBrush="#FF2733B1" BorderThickness="5">
                <StackPanel Background="Orange" Height="80" >
                    <TextBlock Text="Jugador vs IA" FontSize="40" HorizontalAlignment="Center"/>
                </StackPanel>
                    <Button x:ConnectionId='9' Content="Fácil" x:Name="Facil" Background="#FFF4F0AF"                   
                        Width="250" Height="100" FontSize="30"  Foreground="Black" BorderBrush="Black"  BorderThickness="0" />
                    
                    <Button x:ConnectionId='10' Content="Medio" x:Name="Medio" Background="#FFF4F0AF"                   
                            Width="250" Height="100" FontSize="30"  Foreground="Black" BorderBrush="Black" BorderThickness="0"/>
                    
                    <Button x:ConnectionId='11' Content="Dificil" x:Name="Dificil" Background="#FFF4F0AF"                     
                            Width="250" Height="100" FontSize="30"  Foreground="Black"  BorderBrush="Black" BorderThickness="0" />
            </StackPanel>
                <StackPanel x:ConnectionId='6' x:Name="Multijugador" Canvas.Left="800" Canvas.Top="400" BorderBrush="#FF2733B1" BorderThickness="5">
                <StackPanel Background="Orange" Height="80">
                    <TextBlock Text="Multijugador" FontSize="40" HorizontalAlignment="Center"/>
                </StackPanel>
                <Button x:ConnectionId='7' Content="Local" x:Name="Local"                    Background="#FFF4F0AF" 
                        Width="250" Height="120" FontSize="30"  Foreground="Black" BorderBrush="Black" BorderThickness="0" />

                    <Button x:ConnectionId='8' Content="Online" x:Name="Online"                      Background="#FFF4F0AF"
                        Width="250" Height="120" FontSize="30"  Foreground="Black" BorderBrush="Black" BorderThickness="0"/>
            </StackPanel>
        </Canvas>
    </Viewbox>
</Grid>
    </Page>

