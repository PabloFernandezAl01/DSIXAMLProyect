<Page
    x:Class="DSIXamlProyect.InGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIXamlProyect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="242*"/>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="492*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="295*"/>
            <ColumnDefinition Width="242*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="209*"/>
            <RowDefinition Height="168*"/>
            <RowDefinition Height="247*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="279*"/>
        </Grid.RowDefinitions>

        <Viewbox Stretch="Fill" Grid.RowSpan="5" Grid.ColumnSpan="6" >
            <Image Source="Assets/InGame.png" Stretch="Fill"/>
        </Viewbox>

        <Viewbox Grid.Column="0" Grid.Row="0" Stretch="Fill">
            <Image Source="Assets/red.png" Stretch="Fill"/>
        </Viewbox>
        <Viewbox Grid.Column="0" Grid.Row="0" Stretch="Fill">
            <TextBlock Text="5" Foreground="Black" Margin="6,3,0,0" Height="24" Width="14"/>
        </Viewbox>

        <Viewbox Grid.Column="5" Grid.Row="0" Stretch="Fill">
            <Image Source="Assets/blue.png" Stretch="Fill"/>
        </Viewbox>
        <Viewbox Grid.Column="5" Grid.Row="0" Stretch="Fill">
            <TextBlock Text="2" Foreground="Black" Margin="7,3,0,0" Height="24" Width="14"/>
        </Viewbox>

        <Viewbox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2" Stretch="Fill">
            <Image Source="Assets/joystick.png" Stretch="Fill" Width="513"/>
        </Viewbox>

        <Viewbox Grid.Column="4" Grid.Row="4"  Stretch="Fill">
            <Image Source="Assets/bolaAzul.jpg" Stretch="Fill" Width="513" Margin="0,-50,0,50"/>
        </Viewbox>

        <Viewbox Grid.Column="5" Grid.Row="4"  Stretch="Fill">
            <Image Source="Assets/circuloAmarillo.png" Stretch="Fill" Width="513" Margin="0,-30,0,30"/>
        </Viewbox>

        <Viewbox Grid.Column="5" Grid.Row="1">
            <Button AutomationProperties.Name="Pie" Height="20" Background="{x:Null}"
                Margin="0,0,0,10"
                FontStretch="Normal" BorderBrush="{x:Null}" Foreground="{x:Null}" FocusVisualSecondaryBrush="{x:Null}" FocusVisualPrimaryBrush="{x:Null}">
                <Image Source="/Assets/toolsIcon.png" AutomationProperties.Name="Slice" Stretch="Fill" Margin="-10,-6,-10,-7" FocusVisualPrimaryBrush="{x:Null}" FocusVisualSecondaryBrush="{x:Null}"/>
            </Button>
        </Viewbox>

        <Viewbox Grid.ColumnSpan="6" Grid.RowSpan="5" Stretch="Fill">
            <Canvas Width="3318" Height="1000">
                <Image Source="/Assets/bluePerson.png" Canvas.Left="1049" Canvas.Top="534" Height="240" Width="240"></Image>
                <Image Source="/Assets/redPerson.png" Canvas.Left="1905" Canvas.Top="393" Height="198" Width="198"></Image>
            </Canvas>
        </Viewbox>

    </Grid>
</Page>

