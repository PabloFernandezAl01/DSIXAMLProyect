<Page
    x:Class="DSIXamlProyect.ModoDeJuego"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIXamlProyect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Viewbox  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill">
            <Image  x:Name="Fondo" Source="Assets/Fondo.png" Stretch="Fill" Height="1000" Width="1500" />
        </Viewbox>

        <Viewbox Grid.Row="0" Grid.Column="0"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill">
            <Button x:Name="volver" AutomationProperties.Name="Pie" Height="138" Background="Transparent" Width="240"
                Margin="37,28,0,0"
                FontStretch="Normal">
                <Image Source="/Assets/Volver.png" AutomationProperties.Name="Slice" Stretch="Fill" Margin="-10,18,48,3"/>
            </Button>
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="2"   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100" >
            <Button x:Name="listo" AutomationProperties.Name="Pie" Height="138" Background="Transparent" Width="240"
                Margin="37,28,0,0"
                FontStretch="Normal">
                <Image Source="/Assets/Listo.png" AutomationProperties.Name="Slice" Margin="-10,18,48,3"/>
            </Button>
        </Viewbox>

        <Viewbox Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <TextBlock  VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="Seleccion de modo de juego" FontSize="50" FontStretch="Condensed" 
                    FontFamily="Kristen ITC"  Foreground="Black"  RelativePanel.RightOf="volver" Height="109" Width="730"/>
        </Viewbox>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="0,200,0,0">
                <Viewbox VerticalAlignment="Center" Width="300">
                    <Button Content="Jugador Vs IA" Background="Orange"/>
                </Viewbox>
                <Viewbox VerticalAlignment="Center" Width="300">
                    <Button Content="Facilardoa" Background="#FFF4F0AF"/>
                </Viewbox>
                <Viewbox VerticalAlignment="Center" Width="300">
                    <Button Content="Mediofacil" Background="#FFF4F0AF"/>
                </Viewbox>
                <Viewbox VerticalAlignment="Center" Width="300">
                    <Button Content="Modo extre" Background="#FFF4F0AF"/>
                </Viewbox>
            </StackPanel>
            
            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="0,200,0,0">
                <Viewbox VerticalAlignment="Center" Width="300">
                    <Button Content="Jugador Vs IA" Background="Orange"/>
                </Viewbox>
                <Viewbox VerticalAlignment="Center" Width="300">
                    <Button Content="Local" Background="#FFF4F0AF"/>
                </Viewbox>
                <Viewbox VerticalAlignment="Center" Width="300">
                    <Button Content="Online" Background="#FFF4F0AF"/>
                </Viewbox>
                
            </StackPanel>
        </Grid>
        
        
       
    </Grid>

</Page>
