<Page
    x:Class="DSIXamlProyect.ModoDeJuego"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSIXamlProyect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image x:Name="Fondo" Source="Assets/Fondo.png" Stretch="Fill"/>
        <Button  Click="ClickAtras" AutomationProperties.Name="Pie" Height="138" Background="Transparent" Width="240" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0">
            <Image Source="/Assets/Volver.png" AutomationProperties.Name="Slice"/>
        </Button>

        <TextBlock Text="Selecciona modo de juego" FontSize="80" HorizontalAlignment="Left" 
                   Margin="359,36,0,4" SelectionChanged="TextBlock_SelectionChanged" FontFamily="Kristen ITC">

        </TextBlock>

    </Grid>

</Page>
